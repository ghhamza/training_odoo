    <template id="layout" inherit_id="web.frontend_layout">
        <xpath expr="//main/t" position="before">
            <t t-call="ep_dg_website.intro_block"/>
        </xpath>
    </template>

    <template id="frontend_layout" inherit_id="portal.frontend_layout">
        <xpath expr="//ul[@id='top_menu']" position="attributes">
            <attribute name="class">nav navbar-nav</attribute>
        </xpath>
        <xpath expr="//div[@id='top_menu_collapse']" position="after">
            <ul class="nav rightmenu">
                <li class="dropdown" id="langmenu">
                    <button class="btn dropdown-toggle" type="button" id="langDropDown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span t-esc="list(filter(lambda lg : lg[0] == lang, languages))[0][2].split('/').pop()"/>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="langDropDown">
                        <t t-foreach="languages" t-as="lg">
                            <li>
                                <a t-att-href="url_for(request.httprequest.path + '?' + keep_query(), lang_code=lg[0])" class="dropdown-item js_change_lang" t-att-data-url_code="lg[1]">
                                    <t t-esc="lg[2].split('/').pop()"/>
                                </a>
                            </li>
                        </t>
                    </ul>
                </li>
                <li class="nav-item login-btn">
                    <a href="/login">Log in / Sign in</a>
                </li>
            </ul>
        </xpath>
    </template>


    <template id="layout_website" inherit_id="website.layout">
        <xpath expr="//t[@t-as='submenu']" position="replace">
            <t t-set="top_menu" t-value="website.menu_id.child_id.filtered(lambda r: r.is_bottom_menu != True)"/>
            <t t-foreach="top_menu" t-as="submenu">
                <t t-call="website.submenu">
                    <t t-set="item_class" t-value="'nav-item'"/>
                    <t t-set="link_class" t-value="'nav-link'"/>
                </t>
            </t>
        </xpath>
    </template>
